@model IEnumerable<BlogDAL.Blog>
@{
    ViewData["Title"] = "Home Page";
}

@if (TempData["MensajeExito"] != null)
{
    <div class="alert alert-success" role="alert">
        <b>@TempData["MensajeExito"]</b>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger" role="alert">
        <b>@TempData["Error"]</b>
    </div>
}

<div class="container">
    <div class="text-end mb-4">
        @ViewData["numeroComentarios"] comentarios en total
    </div>
    @foreach (var item in Model)
    {
        <div class="card">
            <h5 class="card-header">@item.Titulo</h5>
            <div class="card-body">
                <h5 class="card-title">Creado por: @item.UsuarioCreacion.Nombre</h5>
                <p class="card-text">@item.Descripcion</p>
                <p class="card-text">@item.Comentarios.Count comentarios</p>
                @foreach(var comentario in item.Comentarios)
                {
                    <blockquote class="blockquote mb-0">
                        <p>@comentario.Descripcion</p>
                        <footer class="blockquote-footer"><cite title="Source Title">@comentario.UsuarioCreacion.Nombre @comentario.FechaCreacion</cite></footer>
                    </blockquote>
                    <br/>
                }
            </div>
        </div>
        <br/>
    }

</div>
